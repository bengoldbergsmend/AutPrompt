
name: Mend CLI Scan

on:
  workflow_dispatch

jobs:
  build:
        runs-on: ubuntu-latest

        steps:
        - uses: actions/checkout@v3
        # Add your package manager build here

      - name: Set variables
        run: |
          echo "APP_NAME=${GITHUB_REPOSITORY_OWNER}" >> $GITHUB_ENV
          echo "PROJECT_NAME=$(basename $GITHUB_REPOSITORY)_$(date +%Y%m%d)" >> $GITHUB_ENV


        - name: Mend CLI Scan
          env:
            MEND_EMAIL: ${{secrets.MEND_EMAIL_BEN_TEST}}
            MEND_USER_KEY: ${{secrets.MEND_EMAIL_BEN_TEST_KEY}}
            MEND_URL: https://saas-eu.mend.io
          run: |
            echo Downloading Mend CLI
            curl -LJO https://downloads.mend.io/production/unified/latest/linux_amd64/mend && chmod +x mend 
            echo Start Mend CLI scan
            ./mend dep -u -s "beng_demo_gh//${APP_NAME}//${PROJECT_NAME}" -r
            ./mend code -s "beng_demo_gh//${APP_NAME}//${PROJECT_NAME}" --snippet-size 0
            ./mend image ubuntu:latest --scope "beng_demo_gh//${APP_NAME}//${PROJECT_NAME}"
